#! /bin/sh

### BEGIN INIT INFO
# Provides:          smartaquarium-sensor-temperature
# Required-Start:    $local_fs $remote_fs $syslog $network
# Required-Stop:     $local_fs $remote_fs $syslog $network
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Smart Aquarium Temperature Sensor
# Description:       Execute daemon to listen MQTT broker and update the data base
### END INIT INFO

NAME=smartaquarium-sensor-temperature-daemon
DAEMON=/usr/local/bin/$NAME
PIDFILE=/var/run/$NAME.pid
DAEMON_USER=root
DAEMON_OPTS=""

test -x $DAEMON || exit 0

. /lib/lsb/init-functions

start_daemon() {
    log_daemon_msg "Starting Smart Aquarium: Temperature Sensor"
    start-stop-daemon --start --background --pidfile $PIDFILE --make-pidfile --user $DAEMON_USER --chuid $DAEMON_USER --startas $DAEMON -- $DAEMON_OPTS
    log_end_msg $?
}

stop_daemon() {
    log_daemon_msg "Stopping Smart Aquarium: Temperature Sensor"
    start-stop-daemon --stop --pidfile $PIDFILE --retry 10
    log_end_msg $?
}

status_daemon() {
    log_daemon_msg "Status Smart Aquarium: Temperature Sensor"
    start-stop-daemon --status --pidfile $PIDFILE
    log_end_msg $?
}

case "$1" in
    start)
    start_daemon
    ;;
    stop)
    stop_daemon
    ;;
    status)
    status_daemon
    ;;
    restart)
    start_daemon
    stop_daemon
    ;;

    *)
    echo "Usage: $0 {start|stop|restart|status}"
    exit 1
esac
exit 0

